---
import styles from "./styles.module.css";
---

<!-- убрать неиспользуемые классы -->
<section class="products">
  <div class="container-big">
    <div class={styles.wrapper}>
      <div class="container">
        <div class="products__inner">
          <h2 class={styles.title}>High quality agricultural products</h2>
          <div class={styles.list}>
            <a
              href="#"
              class={styles.item}
              style="background-image: url(/agroton/images/prod-1.png)"
            >
              <h3 class={styles["item-title"]}>Cereal crops</h3>
              <p class={styles["item-text"]}>(wheat, barley, corn)</p>
              <button class={styles["item-btn"]}>
                <img src="/src/assets/images/btn-arrow.svg" alt="item-btn" />
              </button>
            </a>

            <a
              href="#"
              class={styles.item}
              style="background-image: url(/agroton/images/prod-2.png)"
            >
              <h3 class={styles["item-title"]}>🌻 Oilseeds</h3>
              <p class={styles["item-text"]}>(sunflower, rapeseed, soybean)</p>
              <button class={styles["item-btn"]}>
                <img src="/src/assets/images/btn-arrow.svg" alt="item-btn" />
              </button>
            </a>
            <a
              href="#"
              class={styles.item}
              style="background-image: url(/agroton/images/prod-3.png)"
            >
              <h3 class={styles["item-title"]}>🥛 Dairy products</h3>
              <p class={styles["item-text"]}>(milk, dairy products)</p>
              <button class={styles["item-btn"]}>
                <img src="/src/assets/images/btn-arrow.svg" alt="item-btn" />
              </button>
            </a>
            <a
              href="#"
              class={styles.item}
              style="background-image: url(/agroton/images/prod-4.png)"
            >
              <h3 class={styles["item-title"]}>🍞 Bakery products</h3>
              <p class={styles["item-text"]}>(bread, pastries)</p>
              <button class={styles["item-btn"]}>
                <img src="/src/assets/images/btn-arrow.svg" alt="btn-arrow" />
              </button>
            </a>
            <a
              href="#"
              class={styles.item}
              style="background-image: url(/agroton/images/prod-5.png)"
            >
              <h3 class={styles["item-title"]}>🐔 Poultry farming</h3>
              <p class={styles["item-text"]}>(chicken, eggs)</p>
              <button class={styles["item-btn"]}>
                <img src="/src/assets/images/btn-arrow.svg" alt="btn-arrow" />
              </button>
            </a>
            <a
              href="#"
              class={styles.item}
              style="background-image: url(/agroton/images/prod-6.png)"
            >
              <h3 class={styles["item-title"]}>🍏 Vegetables and fruits</h3>
              <p class={styles["item-text"]}>(if available in production)</p>
              <button class={styles["item-btn"]}>
                <img src="/src/assets/images/btn-arrow.svg" alt="btn-arrow" />
              </button>
            </a>
          </div>
          <a href="#" class={styles.link}>
            See catalog
            <svg
              width="54"
              height="54"
              viewBox="0 0 54 54"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <circle cx="27" cy="27" r="27" fill="white"></circle>
              <path
                d="M35 22V32M35 22H25M35 22L25 32"
                stroke="black"
                stroke-width="1.5"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
