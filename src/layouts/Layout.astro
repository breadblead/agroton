  }

  @font-face {
    font-family: "WorkSans-SemiBold";
    src: url("../assets/fonts/WorkSans-SemiBold.woff2") format("woff2");
    font-style: normal;
    font-weight: 600;
    font-display: swap;
  }

  body {
    font-family: "Nunito Sans", sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.35;
    color: #0e0d0d;
