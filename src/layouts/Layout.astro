<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/reset.css" />
    <link rel="stylesheet" href="css/style.css" />
    <title>Agroton</title>
  </head>

  <body>
    <Header />

    <main class="main">
      <slot />
    </main>
  </body>
</html>

